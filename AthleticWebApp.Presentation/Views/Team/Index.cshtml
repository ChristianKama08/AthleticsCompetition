@using AthleticWebApp.BusinessLogic.Profiles.DTOs
<h3 class="text-xl-center"> Team </h3>
@model List<TeamDto>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="" style="color:white;"> Team</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary btn-sm" href="/Team/Add" role="button">
				<i class="bi bi-plus-circle"></i> Add your Teams
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-dark" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>			
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var tea in Model)
			{
				<tr>
					<td>@tea.Id</td>
					<td>@tea.Name</td>

					<td>
						<a class="btn btn-primary btn-sm" href="/Team/Edit/@tea.Id">Edit</a>
						<a class="btn btn-danger btn-sm" href="/Team/DeleteTeam/@tea.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>