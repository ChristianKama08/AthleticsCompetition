@using AthleticWebApp.BusinessLogic.Profiles.DTOs
<h3 class="text-xl-center"> Competition </h3>
@model List<CompetitionDto>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="" style="color:white;"> Competition</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary btn-sm" href="/Competition/Add" role="button">
				<i class="bi bi-plus-circle"></i> Add Competition
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-dark" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Athlete</th>
				<th>Competition</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var competition in Model)
			{
				<tr>
					<td>@competition.Id</td>
					<td>@competition.AthleteName</td>
					<td>@competition.CompetitionName</td>

					<td>
						<a class="btn btn-primary btn-sm" href="/Competition/Edit/@competition.Id">Edit</a>
						<a class="btn btn-danger btn-sm" href="/Competition/DeleteCompetition/@competition.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>