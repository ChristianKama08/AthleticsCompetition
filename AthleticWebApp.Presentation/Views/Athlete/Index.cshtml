@using AthleticWebApp.BusinessLogic.Profiles.DTOs
<h3 class="text-xl-center"> Athlete </h3>
@model List<AthleteDto>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="" style="color:white;"> Athlete</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary btn-sm" href="/Athlete/AddAthlete" role="button">
				<i class="bi bi-plus-circle"></i> Add Athlete
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-dark" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>FullName</th>
				<th>Height</th>
				<th>Weight</th>
				<th>Gender</th>
				<th>BirthDay</th>
				<th>Country</th>
				<th>Team</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var athlete in Model)
			{
				<tr>
					<td>@athlete.Id</td>
					<td>@athlete.FullName</td>
					<td>@athlete.Height</td>
					<td>@athlete.Weigth</td>
					<td>@athlete.Gender</td>
					<td>@athlete.DateOfBirthday</td>
					<td>@athlete.CountryName</td>
					<td>@athlete.TeamName</td>

					<td>
						<a class="btn btn-primary btn-sm" href="/Athlete/Edit/@athlete.Id">Edit</a>
						<a class="btn btn-danger btn-sm" href="/Athlete/DeleteAthlete/@athlete.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>


    



