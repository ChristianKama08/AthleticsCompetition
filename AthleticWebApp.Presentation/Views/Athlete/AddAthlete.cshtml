@using AthleticWebApp.BusinessLogic.Requests
@model AthleteRequest;


<form asp-action="AddAthlete" method="post">
    
    <div class="form-group">
        <label asp-for="FullName">FullName</label>
        <input asp-for="FullName" class="form-control">
        <span asp-validation-for="FullName" class="text-danger"> </span>

    </div>

        <div class="form-group">
            <label asp-for="Weigth">Weight</label>
            <input asp-for="Weigth" class="form-control">
            <span asp-validation-for="Weigth" class="text-danger"> </span>

        </div>

    <div class="form-group">
        <label asp-for="Height">Height</label>
        <input asp-for="Height" class="form-control">
        <span asp-validation-for="Height" class="text-danger"> </span>

    </div>

    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <input asp-for="Gender" class="form-control">
        <span asp-validation-for="Gender" class="text-danger"> </span>

    </div>

    <div class="form-group">
        <label asp-for="DateOfBirthday">BirthDay</label>
        <input asp-for="DateOfBirthday" class="form-control">
        <span asp-validation-for="DateOfBirthday" class="text-danger"> </span>

    </div>

    <div class="form-group">
        <label asp-for="CountryId">Country</label>
        <select asp-for="CountryId" asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewData["Countries"], "Value", "Text"))" class="form-control">
            <option value="">Select his country</option>
        </select>
        @* <span asp-validation-for="CountryId" class=" text-danger"> </span> *@

    </div>
    

    <div class="form-group">
        <label asp-for="TeamId">TeamId</label>
        <select asp-for="TeamId" asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewData["Teams"], "Value", "Text"))" class="form-control">
            <option value="">Select his team</option>
        </select>
        @* <span asp-validation-for="TeamId" class=" text-danger"> </span> *@

    </div>

    <button type="submit" class="btn btn-primary"> Add Athlete</button>

</form>